generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Contact {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  phone     String?
  subject   String
  message   String
  contacted Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Track {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  coverart  String
  youtube   String?
  spotify   String?
  apple     String?
  createdAt DateTime @default(now())
  artistIDs String[] @db.ObjectId
  artists   Artist[] @relation(fields: [artistIDs], references: [id])
}

model Artist {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  href     String
  trackIDs String[] @db.ObjectId
  tracks   Track[]  @relation(fields: [trackIDs], references: [id])
}

model Information {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  // make a feld with key as "socials" and value as a list of objects with youtube, spotify, apple, instagram, and twitter
  youtube   String
  spotify   String
  apple     String
  email     String
  instagram String
  phone     String
  twitter   String
}
